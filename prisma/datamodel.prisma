type Item {
    id: ID! @id
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    name: String!
    description: String!
    postedBy: User!
    done: Boolean! @default(value: false)
}

type User {
    id: ID! @id
    name: String! @unique
    password: String!
    items: [Item!]!
}
